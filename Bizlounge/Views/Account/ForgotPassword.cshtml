@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot your password?";
}
<div class="ui raised very padded text container">
    <h3 class="ui header centered">Forgot your Password?</h3>
    <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="ui large form validate-me" role="form">
        <div class="ui stacked segment">
            <div class="field">
                <div class="ui left icon input">
                    <i class="at icon"></i>
                    <input asp-for="Email" placeholder="Email address" />
                </div>
            </div>
            <button type="submit" class="ui large blue submit button">Submit</button>
            <div asp-validation-summary="All" class="ui error message"></div>
        </div>

    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
