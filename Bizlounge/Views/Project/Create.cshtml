    </div>
    <div class="two fields">
        <div class="field">
            <label>@Html.DisplayNameFor(model => model.Bonus)</label>
            <div class="ui left icon input">
                <i class="money bill alternate outline icon"></"></i>
                <input asp-for="Bonus" placeholder="@Html.DisplayNameFor(model => model.Bonus)" />
            </div>
        </div>
        <div class="field">
            <label>@Html.DisplayNameFor(model => model.SlotCount)</label>
            <div class="ui left icon input">
                <i class="plus circle icon"></"></i>
                <input asp-for="SlotCount" placeholder="@Html.DisplayNameFor(model => model.SlotCount)" />
