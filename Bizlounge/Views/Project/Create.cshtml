<form asp-controller="Project" asp-action="Create" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="ui large form validate-me" role="form">
    <h4 class="ui dividing header">Create New Project</h4>
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>


    <div class="field">
        <label>@Html.DisplayNameFor(model => model.ProjectOwnerId)</label>
        <div class="ui left icon input">
            <i class="tag icon"></i>
            <input asp-for="ProjectOwnerId" placeholder="@Html.DisplayNameFor(model => model.ProjectOwnerId)" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div class="field">
        <label>@Html.DisplayNameFor(model => model.Name)</label>
        <div class="ui left icon input">
            <i class="tag icon"></i>
            <input asp-for="Name" placeholder="@Html.DisplayNameFor(model => model.Name)" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="field">
        <label>@Html.DisplayNameFor(model => model.Description)</label>
        <textarea asp-for="Description" rows="2" placeholder="Project Name">"@Html.DisplayNameFor(model => model.Description)" </textarea>
    </div>
    <div class="two fields">
        <div class="field">
            <label>@Html.DisplayNameFor(model => model.Budget)</label>
            <div class="ui left icon input">
                <i class="money bill alternate outline icon"></"></i>
                <input asp-for="Budget" placeholder="@Html.DisplayNameFor(model => model.Budget)" />
            </div>
        </div>
        <div class="field">
            <label>@Html.DisplayNameFor(model => model.TotalPayout)</label>
            <div class="ui left icon input">
                <i class="money bill alternate outline icon"></"></i>
                <input asp-for="TotalPayout" placeholder="@Html.DisplayNameFor(model => model.TotalPayout)" />
            </div>
        </div>
    </div>
    <div class="three fields">
        <div class="field">
            <label>@Html.DisplayNameFor(model => model.Duration)</label>
            <div class="ui left icon input">
                <i class="clock outline icon"></i>
                <input asp-for="Duration" placeholder="@Html.DisplayNameFor(model => model.Duration)" />
            </div>
        </div>
        <div class="field">
            <label>@Html.DisplayNameFor(model => model.PaybackInterval)</label>
            <div class="ui left icon input">
                <i class="plus circle icon"></i>
                <select class="ui fluid dropdown" asp-for="PaybackInterval" asp-items="Html.GetEnumSelectList<Project.EnumPaybackInterval>()">
